# ~/.mutt/muttrc

# settings
  set alias_file        = ~/.mutt/aliases
  set alias_format      = "%4n %t %-20a %r"
  set askcc
  set beep_new
#unset confirmappend
  set date_format       = "%d/%m/%y at %I:%M%P"
#  set delete
  set edit_headers
  set editor            = "vim +:silent+?^$"
  set fast_reply
  set folder            = ~/.mutt/maildir
  set forward_format    = "Fwd: %s"
  set forward_quote
  set include
  set index_format      = "%3C %Z %[!%m/%d] %-17.17F %s"
  set ispell            = "aspell -e -c"
  set mail_check        = 0
  set mailcap_path      = ~/.mutt/mailcap
unset mark_old
unset markers
  set mbox_type         = Maildir
  set menu_scroll
  set pager_context     = 5
  set pager_index_lines = 10
  set pager_stop
  set pipe_decode
#  set print_command     = "enscript -p - | psselect -r | lp"
  set quote_regexp      = "^( {0,4}[>|:#%]| {0,4}[a-z0-9]+[>|]+)+"
  set realname          = "N/A"
  set reply_regexp      = "^(([Rr][Ee]?(\[[0-9]+\])?: *)?(\[[^]]+\] *)?)*"
  set reply_to
  set reverse_alias
  set reverse_name
  set sort              = threads
  set sort_aux          = reverse-last-date-received
unset sort_re
#  set spoolfile         = "+gmail/inbox"
  set spoolfile		= "+disroot/inbox"
  set thorough_search
  set thread_received
  set tilde
  set timeout           = 3
  set tmpdir            = ~/.mutt/temp
unset wait_key

# enriched messages
#auto_view text/html
alternative_order text/plain text/enriched text/html

# override with account specific folder-hooks
folder-hook disroot/* source ~/.mutt/accounts/disroot
folder-hook riseup/* source ~/.mutt/accounts/riseup
# collapse subscribed mailing threads
folder-hook disroot/arch_* "exec collapse-all"

# headers to show
ignore *
unignore from: to: cc: date: subject:
hdr_order from: to: cc: date: subject:

# mailing lists
subscribe arch-announce arch-dev-public arch-general

# vim-like key bindings
bind   index         <Space>   collapse-thread
bind   index         gg        first-entry
bind   index         G         last-entry
bind   pager         /         search
bind   pager         j         next-line
bind   pager         k         previous-line
bind   pager         gg        top
bind   pager         G         bottom
bind   pager         <Space>   toggle-quoted
bind   index,pager   \#        noop
bind   index,pager   \&        noop
bind   index,pager   R         group-reply

# shortcut macros
macro index ,d  "<change-folder> =disroot/inbox<enter>"         "go to Disroot Inbox"
macro index ,r  "<change-folder> =riseup/inbox<enter>"          "go to Riseup Inbox"
#macro index ,aa "<change-folder> =riseup/arch_announce<enter>" "go to Arch Announce"
#macro index ,ad "<change-folder> =riseup/arch_dev<enter>"      "go to Arch Dev"
#macro index ,ag "<change-folder> =riseup/arch_general<enter>"  "go to Arch General"

# source files
source $alias_file
source ~/.mutt/colours
source ~/.mutt/mailboxes
source ~/.mutt/accounts/disroot
# gpg signature
source ~/.mutt/gpg.rc
set crypt_autosign=yes
set ssl_force_tls = yes
set ssl_starttls  = yes
