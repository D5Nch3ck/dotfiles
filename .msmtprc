#
# ~/.msmtprc
#
# Accounts will inherit settings from this section
defaults
auth on
tls on
tls_trust_file /etc/ssl/cert.pem
#logfile /tmp/.msmtp.log

#DisRoot
account disroot
host disroot.org
port 587
from d5nch3ck@disroot.org
user d5nch3ck
#password your-passwd
passwordeval "gpg2 -qd ~/.pass-store/disroot.gpg"

#Riseup
account riseup
host mail.riseup.net
port 587
from *********@riseup.net
user *********
#password your-pass
passwordeval "gpg2 -qd ~/.pass-store/riseup.gpg"

# Set a default account
account default : disroot
# vim:ft=msmtp
