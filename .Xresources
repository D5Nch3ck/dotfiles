XTerm*eightBitInput:false
XTerm*locale:utf-8
XTerm*Background: #1D1F21
XTerm*Foreground: white
XTerm*ScrollBar: false
XTerm*faceName: Mensch
XTerm*faceSize: 12
XTerm*selectToClipboard: true
!XTerm*cursorColor:     yellow
XTerm*cursorBlink:      false
XTerm*vt100.backarrowKey: false
XTerm*ttyModes: erase ^?

!Increase or decrease font size in xterm using keyboard shortcut
!keyboard shortcut = ^C + > | ^C - <
XTerm.vt100.translations: #override \n\
  Ctrl <Key> minus: smaller-vt-font() \n\
  Ctrl <Key> plus: larger-vt-font() \n\
  Alt  <Key>C: copy-selection(CLIPBOARD) \n\
  Alt  <Key>V: insert-selection(CLIPBOARD)

XClock*update:          1
XClock*analog:          false
XClock*twentyfour:      false
XClock*foreground:      yellow
XClock*background:      black
XConsole*foreground:    yellow
XConsole*background:    black

! X Settings
Xcursor.theme: Neutral
Xcursor.size: 14
! Colour Scheme
#include "/home/<username>/.config/termcolours/hybrid"

! URxvt Options
URxvt.depth: 32
URxvt.scrollstyle: rxvt
URxvt.scrollBar: off
URxvt.urgentOnBell: true
URxvt.visualBell: true
!URxvt.cursorColor: #00FF00
URxvt.cursorBlink: false
URxvt.cursorUnderline: false
URxvt.termName: rxvt-256color
!URxvt.bell-command: cat /home/<username>/.mutt/beep.wav > /dev/audio
!URxvt.print-pipe: cat > $(mktemp /tmp/uRxvt.XXXXX)
! bold, italic, underline
URxvt.colorBD: #B5BD68
URxvt.colorIT: #B294BB
URxvt.colorUL: #81A2BE
!URxvt.background: black
!URxvt.foreground: white
!URxvt.xftAntialias: true
URxvt.transparent: false
URxvt.tintColor: white
URxvt.shading: 10

! font
URxvt.font: xft:Inconsolata\ for\ Powerline:size=17, xft:DejaVu\ Sans\ Mono:size=16
URxvt.boldFont:  xft:Inconsolata\ for\ Powerline:size=17, xft:DejaVu\ Sans\ Mono:size=16
URxvt.italicFont: xft:Inconsolata\ for\ Powerline:size=17, xft:DejaVu\ Sans\ Mono:size=16
URxvt.boldItalicFont: xft:Inconsolata\ for\ Powerline:size=17, xft:DejaVu\ Sans\ Mono:size=16
URxvt.letterSpace: -1

!Font size
URxvt.keysym.C-M-Up:     font-size:increase
URxvt.keysym.C-M-Down:   font-size:decrease
!URxvt.keysym.C-S-Up:   font-size:incglobal
!URxvt.keysym.C-S-Down: font-size:decglobal

! __NOTE__ This depends upon you running my fork
URxvt.keysym.M-S-p: command:\033]750;0\007
! extensions
URxvt.perl-ext-common: default,clipboard,keyboard-select,url-select,font-size
!,bell-command

! clipboard
URxvt.keysym.M-c: perl:clipboard:copy
URxvt.keysym.M-v: perl:clipboard:paste
URxvt.keysym.M-C-v: perl:clipboard:paste_escaped
URxvt.clipboard.copycmd:  xsel -ib -l /tmp/xsel.log
URxvt.clipboard.pastecmd: xsel -ob -l /tmp/xsel.log
! keyboard-select
URxvt.keysym.M-Escape: perl:keyboard-select:activate
URxvt.keysym.M-s: perl:keyboard-select:search
! url-select
URxvt.keysym.M-u: perl:url-select:select_next
URxvt.url-select.autocopy: true
URxvt.url-select.button: 1
URxvt.url-select.launcher: /usr/local/bin/iridium --enable-unveil --enable-pledge --incognito
URxvt.url-select.underline: false
